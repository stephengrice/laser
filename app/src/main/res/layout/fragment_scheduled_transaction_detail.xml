<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.stephengrice.laser.fragment.ScheduledTransactionDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="txt_amount"/>

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="txt_date"/>

        <TextView
            android:id="@+id/txt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="txt_description"/>

        <TextView
            android:id="@+id/txt_category_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="txt_category_title" />

        <TextView
            android:id="@+id/txt_repeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="txt_repeat" />

        <TextView
            android:id="@+id/txt_enabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="txt_enabled" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:gravity="end"
        android:orientation="horizontal">


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/transaction_edit_fab"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:layout_marginBottom="457dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/ic_edit_white_24dp"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintRight_creator="1" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/transaction_delete_fab"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:layout_marginBottom="200dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/ic_delete_24dp"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintRight_creator="1" />


    </LinearLayout>

</FrameLayout>
